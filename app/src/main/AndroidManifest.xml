<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amandajonathan.workoutmanager">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="Add Day of Week"
            android:name="com.example.amandajonathan.workoutmanager.AddDayWeek" >
            <intent-filter >
                <action android:name="com.example.amandajonathan.workoutmanager.AddDayWeek" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="Add Exercises"
            android:name="com.example.amandajonathan.workoutmanager.AddExercises" >
            <intent-filter >
                <action android:name="com.example.amandajonathan.workoutmanager.AddExercises" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="Web Api Connect"
            android:name="com.example.amandajonathan.workoutmanager.WebApiConnect" >
            <intent-filter >
                <action android:name="com.example.amandajonathan.workoutmanager.WebApiConnect" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="Exercises Info"
            android:name="com.example.amandajonathan.workoutmanager.ExerciseInfo" >
            <intent-filter >
                <action android:name="com.example.amandajonathan.workoutmanager.ExerciseInfo" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="Edit Workout"
            android:name="com.example.amandajonathan.workoutmanager.EditWorkout"
            android:windowSoftInputMode="adjustPan">
            <intent-filter >
                <action android:name="com.example.amandajonathan.workoutmanager.EditWorkout" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="View Workout"
            android:name="com.example.amandajonathan.workoutmanager.ViewWorkoutList"
            android:windowSoftInputMode="adjustPan">
            <intent-filter >
                <action android:name="com.example.amandajonathan.workoutmanager.ViewWorkoutList" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>