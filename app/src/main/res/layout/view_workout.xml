<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Spinner
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/weekSpinner"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:paddingRight="0dp" />

        <ImageButton
            android:id="@+id/editWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pencilicon"
            android:onClick="editWorkout"
            android:layout_marginLeft="170dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/description"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark" />

        <ImageButton
            android:id="@+id/deleteWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trashicon"
            android:onClick="deleteWorkout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="331dp"
        android:id="@+id/exerciseList"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Workout"
        android:id="@+id/newWorkout"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:onClick="addNewWorkout"
        android:background="@android:color/holo_blue_light"
        android:layout_weight="0.19" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear All"
        android:id="@+id/clearAll"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_weight="0.77"
        android:onClick="clearAll"
        android:background="@android:color/holo_blue_light" />
        </LinearLayout>

</LinearLayout>