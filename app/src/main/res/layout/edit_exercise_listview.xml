<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:descendantFocusability="afterDescendants">

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="400dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/addReps"
        android:layout_alignRight="@+id/weight"
        android:layout_alignEnd="@+id/weight"
        android:text="ExerciseName"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="55dp"
            android:layout_height="46dp"
            android:text="+"
            android:id="@+id/addReps"
            android:textSize="30dp"
            android:onClick="addRep"
            android:textAlignment="center"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="3"
            android:height="40dp" />

        <EditText
            android:id="@+id/reps"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:editable="true"
            android:hint="Reps"
            android:layout_gravity="center_horizontal"
            android:layout_alignBottom="@+id/subtractReps"
            android:layout_toRightOf="@+id/subtractReps"
            android:layout_toEndOf="@+id/subtractReps"
            android:layout_column="10" />

        <Button
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="50dp"
            android:id="@+id/subtractReps"
            android:onClick="subtractRep"
            android:textAlignment="center"
            android:layout_weight="0.01"
            android:layout_gravity="right"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/exerciseName"
            android:layout_toRightOf="@+id/addReps"
            android:layout_toEndOf="@+id/addReps"
            android:layout_column="21" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/weightLabel"
            android:layout_width="104dp"
            android:layout_height="29dp"
            android:text="Weight"
            android:layout_marginTop="68dp"
            android:layout_below="@+id/reps"
            android:layout_toLeftOf="@+id/reps"
            android:layout_toStartOf="@+id/reps"
            android:layout_column="3" />

        <EditText
            android:id="@+id/weight"
            android:layout_below="@+id/addReps"
            android:layout_alignLeft="@+id/addReps"
            android:layout_alignStart="@+id/addReps"
            android:editable="true"
            android:layout_marginTop="33dp"
            android:layout_column="10" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TableRow>


</TableLayout>